{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SimpleScript",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.simplescript",
          "match": "\\b(const|and|or|function|return|ignore|if|else|true|false|print|while|null)\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.simplescript",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.simplescript",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.ss"
}
